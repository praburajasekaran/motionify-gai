# =============================================================================
# MOTIONIFY PORTAL - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# REQUIRED variables must be set in production
# =============================================================================

# -----------------------------------------------------------------------------
# Netlify Environment (auto-set by Netlify, set manually for local dev)
# -----------------------------------------------------------------------------
# Values: production | deploy-preview | branch-deploy | dev | development
# Netlify sets this automatically in deployed environments
# For local development, set to 'dev' or 'development'
CONTEXT=dev

# -----------------------------------------------------------------------------
# Database Configuration (REQUIRED)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://username:password@hostname/database?sslmode=require

# SSL Configuration (Development/Staging only)
# Production always enforces SSL validation for security
# Options: true (enable SSL with self-signed support), false (disable - local only)
# Default: true (SSL enabled with self-signed cert support - recommended)
# DATABASE_SSL=true

# -----------------------------------------------------------------------------
# Authentication (REQUIRED in production)
# -----------------------------------------------------------------------------
# JWT Secret - MUST be a strong, unique secret (min 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars

# Session Configuration
# SESSION_DURATION_HOURS=24
# REMEMBER_ME_DURATION_DAYS=7

# -----------------------------------------------------------------------------
# API URLs
# -----------------------------------------------------------------------------
# Set after Netlify deploy
VITE_API_URL=http://localhost:8888/.netlify/functions
NEXT_PUBLIC_API_URL=http://localhost:8888/.netlify/functions

# Portal/App URLs
PORTAL_URL=http://localhost:5173
APP_URL=http://localhost:5173
NEXT_PUBLIC_APP_URL=http://localhost:5173

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of additional allowed origins
# CORS_ALLOWED_ORIGINS=https://custom-domain.com,https://another-domain.com

# -----------------------------------------------------------------------------
# Error Monitoring - Sentry (Recommended)
# -----------------------------------------------------------------------------
# Get DSN from https://sentry.io -> Project Settings -> Client Keys
# Strongly recommended for production to track errors and performance
# SENTRY_DSN=https://xxxx@o123.ingest.sentry.io/456

# -----------------------------------------------------------------------------
# Payment Gateway - Razorpay (REQUIRED for payments)
# -----------------------------------------------------------------------------
# Get from https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_xxxxx
RAZORPAY_KEY_SECRET=xxxxx
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_xxxxx

# Webhook secret for verifying Razorpay webhook signatures
# Get from https://dashboard.razorpay.com/app/webhooks
# REQUIRED in production to prevent webhook spoofing
RAZORPAY_WEBHOOK_SECRET=xxxxx

# -----------------------------------------------------------------------------
# Email Service - Resend (REQUIRED for auth emails)
# -----------------------------------------------------------------------------
# Get from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxx
RESEND_FROM_EMAIL=Motionify <noreply@yourdomain.com>

# Admin notification email (receives new inquiry alerts)
ADMIN_NOTIFICATION_EMAIL=admin@motionify.com

# -----------------------------------------------------------------------------
# Cloudflare R2 Storage (REQUIRED for file uploads)
# -----------------------------------------------------------------------------
R2_ACCOUNT_ID=xxxxx
R2_ACCESS_KEY_ID=xxxxx
R2_SECRET_ACCESS_KEY=xxxxx
R2_BUCKET_NAME=motionify-deliverables

# Public URL for R2 bucket (if using custom domain)
# R2_PUBLIC_URL=https://files.yourdomain.com

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
# Optional: Override default rate limits
# RATE_LIMIT_MAGIC_LINK=5     # Requests per hour per email
# RATE_LIMIT_LOGIN=10         # Requests per hour per IP
# RATE_LIMIT_API=100          # Requests per minute per user

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
# Log level: debug | info | warn | error
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
NODE_ENV=development
# NODE_ENV=production

# -----------------------------------------------------------------------------
# Feature Flags (Optional)
# -----------------------------------------------------------------------------
# ENABLE_RATE_LIMITING=true
# ENABLE_STRICT_CORS=true
